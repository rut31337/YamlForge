# DemoBuilder Environment Configuration
# Copy this file to .env and update with your values

# =================================
# Application Settings
# =================================
APP_TITLE=DemoBuilder - Infrastructure Assistant
MAX_CONVERSATION_TURNS=50
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# =================================
# Feature Flags
# =================================
REDIS_ENABLED=false
KEYCLOAK_ENABLED=false

# =================================
# API Keys (REQUIRED)
# =================================
# Anthropic API key - REQUIRED for AI functionality
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =================================
# Redis Configuration (Optional)
# =================================
# Enable if using Redis for session persistence
# REDIS_URL=redis://redis:6379
# REDIS_PASSWORD=your-redis-password

# =================================
# Keycloak SSO (Future Feature)
# =================================
# KEYCLOAK_SERVER_URL=https://keycloak.company.com
# KEYCLOAK_REALM=demobuilder
# KEYCLOAK_CLIENT_ID=demobuilder-client
# KEYCLOAK_CLIENT_SECRET=your-client-secret

# =================================
# Logging and Debug
# =================================
LOG_LEVEL=INFO
# DEBUG levels: DEBUG, INFO, WARNING, ERROR, CRITICAL

# =================================
# Security Settings
# =================================
# Enable HTTPS redirect
FORCE_HTTPS=false

# Session configuration
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true

# =================================
# Performance Tuning
# =================================
# Maximum number of concurrent users
MAX_CONCURRENT_USERS=50

# Request timeout in seconds
REQUEST_TIMEOUT=30

# =================================
# Container Resource Limits
# =================================
# Memory limit for container (e.g., 1G, 512M)
MEMORY_LIMIT=1G

# CPU limit for container (e.g., 0.5, 1.0)
CPU_LIMIT=0.5

# =================================
# Network Configuration
# =================================
# Port for the application (default: 8501)
APP_PORT=8501

# Bind address (default: 0.0.0.0)
BIND_ADDRESS=0.0.0.0

# =================================
# SSL Configuration (for Nginx)
# =================================
# SSL certificate paths (if using custom certificates)
# SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
# SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# =================================
# Development Settings
# =================================
# Enable development mode
DEV_MODE=false

# Enable hot reload (development only)
HOT_RELOAD=false

# Mock external services (for testing)
MOCK_EXTERNAL_APIS=false
